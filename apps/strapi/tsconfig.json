{
  "extends": "../../packages/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.json",
    "config/**/*.js",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".tmp",
    ".cache"
  ]
}
