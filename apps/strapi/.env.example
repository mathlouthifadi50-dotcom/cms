# Strapi CMS Environment Configuration

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=app
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=true
# SQLite for development (uncomment for SQLite)
# DATABASE_CLIENT=sqlite
# DATABASE_FILENAME=.tmp/data.db

# Server Configuration
STRAPI_HOST=0.0.0.0
STRAPI_PORT=1337

# Security Keys (generate with: openssl rand -base64 32)
STRAPI_APP_KEYS=your-app-keys-here,separated,by,commas,at-least-4-keys
STRAPI_API_TOKEN_SALT=your-api-token-salt-here
STRAPI_ADMIN_JWT_SECRET=your-admin-jwt-secret-here
STRAPI_JWT_SECRET=your-jwt-secret-here

# Admin Configuration
STRAPI_ADMIN_FORCE_EMAIL=true
STRAPI_ADMIN_ENABLE_UNFAMILIAR_HOSTS=false

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER_NAME=Your App Name
SMTP_SENDER_EMAIL=noreply@yourapp.com

# Environment
NODE_ENV=production

# Upload Configuration
UPLOAD_PROVIDER=local
# AWS S3 (optional)
# UPLOAD_PROVIDER=aws-s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# Logging
LOG_LEVEL=info
APP_KEYS=your-app-keys-here,separated,by,commas

# API Configuration
API_TOKEN_SALT=your-api-token-salt-here

# SSL Configuration (production)
# DATABASE_SSL_CA_PATH=/path/to/ca-cert.pem
# DATABASE_SSL_CERT_PATH=/path/to/client-cert.pem
# DATABASE_SSL_KEY_PATH=/path/to/client-key.pem

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMITER_WINDOW_MS=900000
RATE_LIMITER_MAX_REQUESTS=100