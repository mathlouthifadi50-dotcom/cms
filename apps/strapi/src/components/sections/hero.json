{
  "collectionName": "components_sections_heroes",
  "info": {
    "displayName": "Hero Section",
    "icon": "star",
    "description": "Hero section with title, subtitle, image, and CTA buttons"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "titleHighlight": {
      "type": "string"
    },
    "subtitle": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "ctaButtons": {
      "type": "component",
      "repeatable": true,
      "component": "shared.cta-button"
    },
    "floatingCard": {
      "type": "component",
      "repeatable": false,
      "component": "shared.floating-card"
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "left"
    },
    "overlay": {
      "type": "boolean",
      "default": false
    },
    "showScrollIndicator": {
      "type": "boolean",
      "default": true
    }
  }
}
